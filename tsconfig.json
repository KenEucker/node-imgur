{
  "files": ["./src/index.ts"],
  "include": ["src/**/*"],
  "exclude": ["src/coverage/", "src/mocks/", "src/**/*.test.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "dom"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist/typings/",
    "typeRoots": ["@types", "./node_modules/@types"],
    "outDir": "./dist/esm/",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true
  }
}
